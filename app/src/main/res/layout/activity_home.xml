<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/material_clock_size"
        android:src="@drawable/logo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/app_name" />

    <Button
        android:id="@+id/customerLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login "
        android:layout_marginTop="60dp"
        android:onClick="onCustomerLoginClicked" />

    <Button
        android:id="@+id/ownerLoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login Admin"
        android:layout_marginTop="20dp"
        android:onClick="onOwnerLoginClicked" />

</LinearLayout>
